@model DiscoverViewModel

<main>
    <!-- Page Header -->
    <div class="page-header">
        <h2 class="page-title serif">Discover</h2>
        <p class="page-subtitle">Explore the collection of @Model.TotalResults movies</p>
    </div>

    <!-- Search and Filters -->
    <div class="filters-section">
        <div class="search-container">
            <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input type="text" class="search-input" placeholder="Search movies..." id="searchInput">
        </div>

        <div class="filters-row">
            <div class="filters-group">
                <form method="get" action="/Discover">
                    <select id="genreFilter" name="genre" onchange="this.form.submit()">
                        <option value="all">All Genres</option>
                        <option value="action">Action</option>
                        <option value="drama">Drama</option>
                        <option value="horror">Horror</option>
                        <option value="thriller">Thriller</option>
                        <option value="animation">Animation</option>
                        <option value="adventure">Adventure</option>
                        <option value="crime">Crime</option>
                        <option value="comedy">Comedy</option>
                        <option value="sci-fi">Sci-Fi</option>
                    </select>

                    <select id="yearFilter" name="year" onchange="this.form.submit()">
                        <option value="all" selected="@(Model.CurrentYear == "All")">All Years</option>
                        <option value="2025" selected="@(Model.CurrentYear == "2025")">2025</option>
                        <option value="2024" selected="@(Model.CurrentYear == "2024")">2024</option>
                        <option value="2023" selected="@(Model.CurrentYear == "2023")">2023</option>
                        <option value="2022" selected="@(Model.CurrentYear == "2022")">2022</option>
                        <option value="2021" selected="@(Model.CurrentYear == "2021")">2021</option>
                        <option value="2020" selected="@(Model.CurrentYear == "2020")">2020</option>
                        <option value="2019" selected="@(Model.CurrentYear == "2019")">2019</option>
                        <option value="2018" selected="@(Model.CurrentYear == "2018")">2018</option>
                    </select>

                    <select id="sortFilter" name="sort" onchange="this.form.submit()">
                        <option value="popularity.desc" selected="@(Model.CurrentSort == "popularity.desc")">Popularity</option>
                        <option value="vote_average.desc" selected="@(Model.CurrentSort == "vote_average.desc")">Rating</option>
                        <option value="primary_release_date.desc" selected="@(Model.CurrentSort == "primary_release_date.desc")">Year</option>
                        <option value="title.asc" selected="@(Model.CurrentSort == "title.asc")">Title (A-Z)</option>
                    </select>
                </form>
            </div>
        </div>
    </div>

    <!-- Results Count -->
    <div class="results-count">
        <p>Showing <span>20</span> results</p>
    </div>

    <!-- Movies Grid -->
    <div class="movies-grid view-grid" id="moviesGrid">
        @foreach(var movie in Model.Cards)
        {
            <div class="movie-card">
                <a class="movie-Details" asp-controller="MovieDetails" asp-action="Details" asp-route-id="@movie.Id">
                    <div class="movie-poster">
                        <img src="@movie.Poster" alt="@movie.Title">
                        <div class="movie-overlay"></div>
                        <div class="movie-rating">@movie.VoteAverage</div>
                        <div class="movie-info">
                            <div class="movie-year">@movie.Year</div>
                            <div class="movie-genre">@movie.Genres</div>
                        </div>
                    </div>
                    <h3 class="movie-title serif">@movie.Title</h3>
                </a>
            </div>
        }
    </div>

    <!-- Pagination -->
    <section class="pagination-nav" aria-label="Movie pagination">
        <ul class="pagination">
            <!-- Previous Button -->
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" 
                        href="/Discover?page=@(Model.Page - 1)&sort=@Model.CurrentSort&year=@Model.CurrentYear">
                        ← Previous
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">← Previous</span>
                </li>
            }

            <!-- First page if not visible -->
            @if (Model.GetPageNumbers().First() > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="/Discover?page=1&sort=@Model.CurrentSort&year=@Model.CurrentYear">
                        1
                    </a>
                </li>
                @if (Model.GetPageNumbers().First() > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            <!-- Page Numbers -->
            @foreach (var pageNum in Model.GetPageNumbers())
            {
                <li class="page-item @(pageNum == Model.Page ? "active" : "")">
                    <a class="page-link"
                       href="/Discover?page=@pageNum&sort=@Model.CurrentSort&year=@Model.CurrentYear">
                        @pageNum
                    </a>
                </li>
            }

            <!-- Last page if not visible -->
            @if (Model.GetPageNumbers().Last() < Model.TotalPages)
            {
                @if (Model.GetPageNumbers().Last() < Model.TotalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item">
                    <a class="page-link"
                       href="/Discover?page=@Model.TotalPages&sort=@Model.CurrentSort&year=@Model.CurrentYear">
                        @Model.TotalPages
                    </a>
                </li>
            }

            <!-- Next Button -->
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="/Discover?page=@(Model.Page + 1)&sort=@Model.CurrentSort&year=@Model.CurrentYear">
                        Next →
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Next →</span>
                </li>
            }
        </ul>
    </section>
</main>