@model DiscoverViewModel

<main>
    <!-- Page Header -->
    <div class="page-header">
        <h2 class="page-title serif">Discover</h2>
        <p class="page-subtitle">Explore the collection of @Model.TotalResults movies</p>
    </div>

    <!-- Search and Filters -->
    <div class="filters-section">
        <div class="search-container">
            <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <form action="/Discover/Search/Movie" method="get">
                <input 
                    type="text" 
                    name="query"
                    class="search-input" 
                    placeholder="Search movies..." 
                    id="searchInput" 
                />
            </form>
        </div>

        <div class="filters-row">
            <div class="filters-group">
                <form method="get" action="/Discover">
                    <select id="genreFilter" name="genre" onchange="this.form.submit()">
                        <option value="" selected="@(Model.CurrentGenre == "All")">All Genres</option>
                        <option value="28" selected="@(Model.CurrentGenre == "28")">Action</option>
                        <option value="12" selected="@(Model.CurrentGenre == "12")">Adventure</option>
                        <option value="16" selected="@(Model.CurrentGenre == "16")">Animation</option>
                        <option value="35" selected="@(Model.CurrentGenre == "35")">Comedy</option>
                        <option value="80" selected="@(Model.CurrentGenre == "80")">Crime</option>
                        <option value="99" selected="@(Model.CurrentGenre == "99")">Documentary</option>
                        <option value="18" selected="@(Model.CurrentGenre == "18")">Drama</option>
                        <option value="10751" selected="@(Model.CurrentGenre == "10751")">Family</option>
                        <option value="14" selected="@(Model.CurrentGenre == "14")">Fantasy</option>
                        <option value="36" selected="@(Model.CurrentGenre == "36")">History</option>
                        <option value="27" selected="@(Model.CurrentGenre == "27")">Horror</option>
                        <option value="10402" selected="@(Model.CurrentGenre == "10402")">Music</option>
                        <option value="9648" selected="@(Model.CurrentGenre == "9648")">Mystery</option>
                        <option value="878" selected="@(Model.CurrentGenre == "878")">Science Fiction</option>
                        <option value="10770" selected="@(Model.CurrentGenre == "10770")">TV Movie</option>
                        <option value="53" selected="@(Model.CurrentGenre == "53")">Thriller</option>
                        <option value="10752" selected="@(Model.CurrentGenre == "10752")">War</option>
                        <option value="37" selected="@(Model.CurrentGenre == "37")">Western</option>
                    </select>

                    <select id="yearFilter" name="year" onchange="this.form.submit()">
                        <option value="all" selected="@(Model.CurrentYear == "All")">All Years</option>
                        @for(int year = DateTime.Now.Year; year >= 2000; year--)
                        {
                            <option value="@year" selected="@(Model.CurrentYear == year.ToString())">@year</option>
                        }
                    </select>

                    <select id="sortFilter" name="sort" onchange="this.form.submit()">
                        <option value="popularity.desc" selected="@(Model.CurrentSort == "popularity.desc")">Popularity</option>
                        <option value="vote_average.desc" selected="@(Model.CurrentSort == "vote_average.desc")">Rating</option>
                        <option value="primary_release_date.desc" selected="@(Model.CurrentSort == "primary_release_date.desc")">Year</option>
                        <option value="title.asc" selected="@(Model.CurrentSort == "title.asc")">Title (A-Z)</option>
                    </select>
                </form>
            </div>
        </div>
    </div>

    <!-- Results Count -->
    <div class="results-count">
        <p>Showing <span>@Model.Movies.Count</span> results</p>
    </div>

    <!-- Movies Grid -->
    <div class="movies-grid view-grid" id="moviesGrid">
        @foreach(var movie in Model.Cards)
        {
            <div class="movie-card">
                <a class="movie-Details" asp-controller="MovieDetails" asp-action="Details" asp-route-id="@movie.Id">
                    <div class="movie-poster">
                        <img src="@movie.Poster" alt="@movie.Title">
                        <div class="movie-overlay"></div>
                        <div class="movie-rating">@movie.VoteAverage</div>
                        <div class="movie-info">
                            <div class="movie-year">@movie.Year</div>
                            <div class="movie-genre">@movie.Genres</div>
                        </div>
                    </div>
                    <h3 class="movie-title serif">@movie.Title</h3>
                </a>
            </div>
        }
    </div>

    <!-- Pagination -->
    <section class="pagination-nav" aria-label="Movie pagination">
        <ul class="pagination">
            <!-- Previous Button -->
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" 
                        href="/Discover?page=@(Model.Page - 1)&sort=@Model.CurrentSort&year=@Model.CurrentYear&genre=@Model.CurrentGenre">
                        ← Previous
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">← Previous</span>
                </li>
            }

            <!-- First page if not visible -->
            @if (Model.GetPageNumbers().First() > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="/Discover?page=1&sort=@Model.CurrentSort&year=@Model.CurrentYear&genre=@Model.CurrentGenre">
                        1
                    </a>
                </li>
                @if (Model.GetPageNumbers().First() > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            <!-- Page Numbers -->
            @foreach (var pageNum in Model.GetPageNumbers())
            {
                <li class="page-item @(pageNum == Model.Page ? "active" : "")">
                    <a class="page-link"
                       href="/Discover?page=@pageNum&sort=@Model.CurrentSort&year=@Model.CurrentYear&genre=@Model.CurrentGenre">
                        @pageNum
                    </a>
                </li>
            }

            <!-- Last page if not visible -->
            @if (Model.GetPageNumbers().Last() < Model.TotalPages)
            {
                @if (Model.GetPageNumbers().Last() < Model.TotalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item">
                    <a class="page-link"
                       href="/Discover?page=@Model.TotalPages&sort=@Model.CurrentSort&year=@Model.CurrentYear&genre=@Model.CurrentGenre">
                        @Model.TotalPages
                    </a>
                </li>
            }

            <!-- Next Button -->
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="/Discover?page=@(Model.Page + 1)&sort=@Model.CurrentSort&year=@Model.CurrentYear&genre=@Model.CurrentGenre">
                        Next →
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Next →</span>
                </li>
            }
        </ul>
    </section>
</main>